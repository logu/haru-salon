.card
  background-color white
  width auto
  box-sizing content-box
  box-shadow 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12)
  max-width 100vw
  height calc(100vh - 65vh)
  overflow auto

.sh-list
  min-width 340px
  & .sh-list-item
    padding 16px
    cursor pointer
    display block
    &:hover
      background-color #f3f3f3;
    & .sh-list-content,
      .sh-list-icon
        display inline-block
        vertical-align middle
      .sh-list-item-title
        color #2C2D30
        padding 2px 0
        font-weight lighter
        font-size 1.5em
        text-decoration none
      .sh-list-item-sub-title
        color #717274
        font-size 15px
        text-decoration none
        font-weight lighter
        font-seize 2em
      .sh-list-icon
        margin-right 10px
        background-color #d2d2d2
        width 40px
        height 40px
        text-align center
        line-height 42px
        font-size 1.2em
        font-weight 100
        color white
        border-radius 50%
        &.add
          background-color #fd2e76
      .sufix
        display inline-block
        font-size 24px
        float right
      .wifi-icon svg
        margin-top 5px